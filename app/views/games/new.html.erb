<h1>New game</h1>
<div class="container">
  <div class="letter-generator">
    <% @letters.each do |letter| %>
    <div class="letter">
      <%= letter %>
    </div>
    <% end %>
  </div>
</div>

<div class="container form">
  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join %>
    <input type="text" name="word">
    <input type="submit" value="Play!" class="btn btn-info">
  </form>
</div>
